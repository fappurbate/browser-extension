{
  "name": "Chaturbate Chat Sniffer",
  "version": "0.1",
  "description": "Sniff your Chaturbate!",
  "permissions": [
    "tabs", "https://*/*", "declarativeContent", "debugger", "storage", "webRequest"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://unpkg.com; object-src 'self'",
  "background": {
  	"scripts": ["background.js"],
  	"persistent": true
  },
  "browser_action": {
    "default_title": "Chaturbate Chat Sniffer",
  	"default_popup": "popup.html",
    "default_icon": {
      "16": "assets/images/logo16.png",
      "32": "assets/images/logo32.png",
      "48": "assets/images/logo48.png",
      "128": "assets/images/logo128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.chaturbate.com/*"],
      "css": ["content/translator.css"],
      "js": ["content/translator.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://*.chaturbate.com/p/*"],
      "css": ["content/profile.css"],
      "js": ["content/profile.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://translate.google.com/*", "https://translate.google.ru/*"],
      "css": ["content/gtranslate.css"],
      "js": ["content/gtranslate.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "assets/images/logo16.png",
    "32": "assets/images/logo32.png",
    "48": "assets/images/logo48.png",
    "128": "assets/images/logo128.png"
  },
  "manifest_version": 2
}
