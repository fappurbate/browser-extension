{
  "name": "Chaturbate Chat Sniffer",
  "version": "0.1",
  "description": "Sniff your Chaturbate!",
  "permissions": [
    "tabs", "https://*/*", "declarativeContent", "debugger", "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://unpkg.com; object-src 'self'",
  "background": {
  	"scripts": [
      "background/ws.js",
      "background/main.js"
    ],
  	"persistent": true
  },
  "browser_action": {
    "default_title": "Chaturbate Chat Sniffer",
  	"default_popup": "popup/index.html",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.chaturbate.com/*"],
      "css": ["content-scripts/message-menu.css"],
      "js": ["content-scripts/message-menu.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "manifest_version": 2
}
